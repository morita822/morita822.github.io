<h1>Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Employee ID</th>
      <th>Date</th>
      <th>Attendance Status</th>
      <th>Shift Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.employee_id %></td>
        <td><%= attendance.date %></td>
        <td><%= attendance.attendance_status %></td>
        <td><%= attendance.shift_status %></td>
        <td><%= link_to 'Show', employee_attendance_path(@employee, attendance) %></td>
        <td><%= link_to 'Edit', edit_employee_attendance_path(@employee, attendance) %></td>
        <td><%= link_to 'Destroy', employee_attendance_path(@employee, attendance), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

 </table>

