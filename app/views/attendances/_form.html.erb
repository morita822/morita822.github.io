<%= form_with url: attendances_path do |f| %>
  <%= f.label :employee_id %>
  <%= f.text_field :employee_id %><br>

  <%= f.label :password_digest %>
  <%= f.password_field :password_digest %><br>

  <%= f.label :attendance_status %>
  <%= f.select :attendance_status, options_for_select([['出勤', 1], ['退勤', 2]]) %><br>

  <%= f.submit '登録' %>
<% end %>