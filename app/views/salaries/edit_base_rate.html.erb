<h1>Edit Base Rate</h1>

<%= form_with(url: update_base_rate_salaries_path, method: "patch", local: true) do %>
  <div class="field">
    <%= label_tag :base_rate, "Base Rate" %>
    <%= number_field_tag :base_rate, @base_rate, min: 1, step: 1 %>
  </div>

  <div class="actions">
    <%= submit_tag "Update Base Rate" %>
  </div>
<% end %>

<%= link_to "Back", salaries_path %>
